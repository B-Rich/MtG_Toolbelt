<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bedfordwest.bedford.mtgtoolbelt.TokenCreationActivity">

    <TextView
        android:id="@+id/token_intro"
        android:text="@string/create_token_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/power_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power"
        android:layout_below="@id/token_intro"/>

    <EditText
        android:id="@+id/power_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="#"
        android:layout_below="@id/token_intro"
        android:layout_toRightOf="@id/power_label"/>

    <TextView
        android:id="@+id/toughness_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toughness"
        android:layout_below="@id/token_intro"
        android:layout_toRightOf="@id/power_field"/>

    <EditText
        android:id="@+id/toughness_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="#"
        android:layout_below="@id/token_intro"
        android:layout_toRightOf="@id/toughness_label"/>

    <TextView
        android:id="@+id/token_color_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/token_color_string"
        android:layout_below="@id/power_field"/>

    <RadioButton
        android:id="@+id/green_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/token_radio"
        android:layout_below="@id/token_color_choice" />

    <RadioButton
        android:id="@+id/red_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/token_radio"
        android:layout_below="@id/token_color_choice"
        android:layout_toRightOf="@id/green_token" />

    <RadioButton
        android:id="@+id/black_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/token_radio"
        android:layout_below="@id/token_color_choice"
        android:layout_toRightOf="@id/red_token" />

    <RadioButton
        android:id="@+id/white_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/token_radio"
        android:layout_below="@id/token_color_choice"
        android:layout_toRightOf="@id/black_token" />

    <RadioButton
        android:id="@+id/blue_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/token_radio"
        android:layout_below="@id/token_color_choice"
        android:layout_toRightOf="@id/white_token" />

    <RadioButton
        android:id="@+id/multicolor_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/token_radio"
        android:layout_below="@id/token_color_choice"
        android:layout_toRightOf="@id/blue_token" />

    <RadioButton
        android:id="@+id/colorless_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/token_radio"
        android:layout_below="@id/token_color_choice"
        android:layout_toRightOf="@id/multicolor_token" />


</RelativeLayout>
